{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "types": ["@cloudflare/workers-types"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@public/*": ["./public/*"],

      "#buna/*": [".buna/*"],
      "bunax": [".buna/runtime/index.js"],
      "bunax/*": [".buna/runtime/*"]
    }
  },
  "include": [
    "src",
    ".buna",
    "buna.config.ts",
    "types",
    "bun-env.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
